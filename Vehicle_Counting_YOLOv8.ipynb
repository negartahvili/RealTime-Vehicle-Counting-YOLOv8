# Cell 4: Detection and counting function
def count_cars_in_image(image_path, model_path, confidence_threshold=0.5):
    model = YOLO(model_path)
    predictions = model(image_path, conf=confidence_threshold, iou=0.7, verbose=False)
    img = cv2.imread(image_path)
    img = cv2.cvtColor(img, cv2.COLOR_BGR2RGB)
    car_count = 0
    fig, ax = plt.subplots(1, figsize=(12, 10))
    ax.imshow(img)
    
    for r in predictions:
        for box in r.boxes:
            if int(box.cls[0]) == 0:
                car_count += 1
                x1, y1, x2, y2 = map(int, box.xyxy[0])
                rect = patches.Rectangle((x1, y1), x2-x1, y2-y1, linewidth=2, edgecolor='#008000', facecolor='none')
                ax.add_patch(rect)
                ax.text(x1, y1 - 10, f"car: {float(box.conf[0]):.2f}", color='white', fontsize=10, bbox=dict(facecolor='#008000', alpha=0.7))
    
    ax.set_title(f"Detected Cars: {car_count}")
    ax.axis('off')
    plt.show()
    return car_count


